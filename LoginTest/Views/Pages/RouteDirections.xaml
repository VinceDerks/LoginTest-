<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginTest.RouteDirections"
             Title="RouteDirections">
    <StackLayout>
        <StackLayout>

            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnRouteTapped" />
            </StackLayout.GestureRecognizers>
            <StackLayout Padding="10" 
                         BackgroundColor="LightGray" 
                         Margin="5">

            <Label Text="{Binding City}" 
                   FontSize="16" 
                       TextColor="Black"
                       HorizontalOptions="Center"/>

            <Label Text="{Binding Adress}" 
                       FontSize="14" 
                       TextColor="Black"
                       HorizontalOptions="Center"/>

            <Label Text="{Binding TimeArrive}" 
                       FontSize="14" 
                       TextColor="#999999"
                       HorizontalOptions="Center"/>

            <Label Style="{StaticResource Key=LblStyle}" 
                       Text="{Binding TimeDepart}" 
                       FontSize="14" 
                       TextColor="#999999"
                       HorizontalOptions="Center"/>

            <Label Text="{Binding TypeOf}" 
                       FontSize="14" 
                       TextColor="#999999"/>

        </StackLayout>

            <StackLayout Padding="10" 
                         BackgroundColor="LightGray" 
                         Margin="5">


                <Label Text="{Binding City}" 
                   FontSize="16" 
                       TextColor="Black"
                       HorizontalOptions="Center"/>

                <Label Text="{Binding Adress}" 
                       FontSize="14" 
                       TextColor="Black"
                       HorizontalOptions="Center"/>

                <Label Text="{Binding TimeArrive}" 
                       FontSize="14" 
                       TextColor="#999999"
                       HorizontalOptions="Center"/>

                <Label Text="{Binding TimeDepart}" 
                       FontSize="14" 
                       TextColor="#999999"
                       HorizontalOptions="Center"/>

                <Label Text="{Binding TypeOf}" 
                       FontSize="14" 
                       TextColor="#999999"/>

            </StackLayout>

            <StackLayout Padding="10" 
                 BackgroundColor="LightGray" 
                 Margin="5">


                <Label Text="{Binding City}" 
               FontSize="16" 
               TextColor="Black"
               HorizontalOptions="Center"/>

                <Label Text="{Binding Adress}" 
               FontSize="14" 
               TextColor="Black"
               HorizontalOptions="Center"/>

                <Label Text="{Binding TimeArrive}" 
               FontSize="14" 
               TextColor="#999999"
               HorizontalOptions="Center"/>

                <Label Text="{Binding TimeDepart}" 
               FontSize="14" 
               TextColor="#999999"
               HorizontalOptions="Center"/>

                <Label Text="{Binding TypeOf}" 
               FontSize="14" 
               TextColor="#999999"/>

            </StackLayout>
        </StackLayout>
    </StackLayout>
    
</ContentPage>