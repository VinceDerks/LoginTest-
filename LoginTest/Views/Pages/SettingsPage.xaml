<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginTest.Pages.SettingsPage"
             xmlns:lang="clr-namespace:LoginTest.Resources.Languages"
             Title="Settings">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">red</Color>
            <Color x:Key="SecondaryColor">#6D7272</Color>
           
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Button BackgroundColor="Black" TextColor="White" Text="{x:Static lang:AppResources.Logoutbutton}" Clicked="LogoutButton_Clicked" WidthRequest="300" Margin="0,15" />
    </VerticalStackLayout>
</ContentPage>