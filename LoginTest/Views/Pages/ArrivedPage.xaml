<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
    xmlns:lang="clr-namespace:LoginTest.Resources.Languages"
    x:Class="LoginTest.ArrivedPage"
    Title="ArrivedPage"
          >
    <StackLayout>
        
        <mct:DrawingView
            x:Name="SignatureEntry"
            BackgroundColor="LightGray"
            WidthRequest="500"
            HeightRequest="300"
            IsMultiLineModeEnabled="True"
            LineColor="Black"
            LineWidth="5"
            />
        <Button BackgroundColor="Black" Clicked="ClearButton_Clicked" Text="{x:Static lang:AppResources.NewSig}"></Button>
        <Button BackgroundColor="Black" Clicked="SaveButton_Clicked" Text="{x:Static lang:AppResources.Save}"></Button>
        <Button BackgroundColor="Red" Clicked="NavigateToNotArrived" Text="{x:Static lang:AppResources.NotDel}"/>
    </StackLayout>
</ContentPage>
