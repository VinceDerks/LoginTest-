<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             xmlns:lang="clr-namespace:LoginTest.Resources.Languages"
             x:Class="LoginTest.ArrivedPage"
             Title="{x:Static lang:AppResources.ArrivedPage}">
    <Grid RowDefinitions="*,Auto">
        <VerticalStackLayout Grid.Row="0">
            <StackLayout Padding="10">
        <mct:DrawingView
            x:Name="SignatureEntry"
            BackgroundColor="LightGray"
            WidthRequest="500"
            HeightRequest="300"
            IsMultiLineModeEnabled="True"
            LineColor="Black"
            LineWidth="5"
        />
        
    </StackLayout>
            
    </VerticalStackLayout>
        <HorizontalStackLayout Grid.Row="1" HorizontalOptions="CenterAndExpand">
            <Button ImageSource="reset.svg" WidthRequest="200" HeightRequest="50" BackgroundColor="red" Clicked="ClearButton_Clicked" CornerRadius="0" />
            <Button WidthRequest="200" HeightRequest="50" ImageSource="approve.svg" BackgroundColor="Green" Clicked="SaveButton_Clicked" CornerRadius="0" />
    </HorizontalStackLayout>
</Grid>
</ContentPage>