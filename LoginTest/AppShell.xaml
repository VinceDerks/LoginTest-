<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:LoginTest"
       x:Class="LoginTest.AppShell"
       FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Image Source="rentbuddylogo.png" Aspect="AspectFit" />
    </Shell.FlyoutHeader>

    <TabBar>
        <ShellContent Route="routes"
                      Title="Routes"
                      ContentTemplate="{DataTemplate local:RoutesPage}" />
    </TabBar>

    <FlyoutItem Title="Settings">
        <ShellContent Route="settings"
                      FlyoutIcon="home.svg"
                      Title="Settings"
                      ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Routes">
        <ShellContent Route="routes"
                  FlyoutIcon="home.svg"
                  Title="Routes"
                  ContentTemplate="{DataTemplate local:RoutesPage}" />
    </FlyoutItem>


    <Shell.ToolbarItems>
        <ToolbarItem IconImageSource="home.svg" Command="{Binding GoToRoutesCommandPage}" />
    </Shell.ToolbarItems>

</Shell>