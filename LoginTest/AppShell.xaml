<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LoginTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LoginTest"
    Shell.TabBarIsVisible="True"
    Shell.TabBarBackgroundColor="#0070B4"
    Shell.TabBarTitleColor="White"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Route="RoutesPage"
                      Title="Home"
                      Icon="home.png"
                      ContentTemplate="{DataTemplate local:RoutesPage}" />

        <ShellContent Route="UserPage"
                      Title="Personal"
                      Icon="person.png"
                      ContentTemplate="{DataTemplate local:UserPage}" />
    </TabBar>

</Shell>
    
    