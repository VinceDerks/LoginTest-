<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LoginTest"
             x:Class="LoginTest.LoggedHome"
        >

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" IsVisible="False"/>
    </Shell.BackButtonBehavior>
    <StackLayout>
            <Grid Padding="10"
              ColumnSpacing="5"
              RowSpacing="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="155" />
                    <RowDefinition Height="155"/>
                    <RowDefinition Height="155"/>
                    <RowDefinition Height="155"/>
                    <RowDefinition Height="155"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions Padding="10">
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <BoxView Grid.Row="0" 
                     Grid.ColumnSpan="2" 
                     Color="Transparent"/>
                <Label Grid.Row="0" 
                       Grid.ColumnSpan="2"
                       HorizontalOptions="CenterAndExpand" 
                       VerticalOptions="CenterAndExpand"/>
                <ImageButton Source="rentbuddylogo.png"
                             Grid.Row="0" 
                             Grid.ColumnSpan="2"/>

            <BoxView Grid.Row="1"
                         Color="White" />
                <Label Grid.Row="1"
                       Grid.Column="0"
                       Text="test"
                       HorizontalOptions="Center"
                       VerticalOptions="End" 
                       FontSize="15"
                       x:Name="bobbert"/>
                <ImageButton
                    Clicked="RetrieveName"
                    Source="persoon2.png"
                             Grid.Row="1"
                            />



                <BoxView Grid.Row="1"
                         Grid.Column="1"
                         Color="White" />
                <Label Grid.Row="1"
                       Grid.Column="1"
                       Text="Personeel"
                       HorizontalOptions="Center"
                       VerticalOptions="End" />
                <ImageButton Source="group.svg"
                        Grid.Row="1"
                        Grid.Column="1"/>


            <BoxView Grid.Row="2"
                         Grid.Column="0"
                         Color="White" />
                <Label Grid.Row="2"
                       Grid.Column="0"
                       Text="Route"
                       HorizontalOptions="Center"
                       VerticalOptions="End" />
            <ImageButton Source="route.svg"
                     Grid.Row="2"
                     Grid.Column="0"/>

      
                <BoxView Grid.Row="2"
                         Grid.Column="1"
                         Color="White" />
                <Label Grid.Row="2"
                       Grid.Column="1"
                       Text="Product Details"
                       HorizontalOptions="Center"
                       VerticalOptions="End" />
                <ImageButton Source="box.svg"
                        Grid.Row="2"
                        Grid.Column="1"
                             HeightRequest="120"/>

            <BoxView Grid.Row="3"
                         Grid.Column="1"
                         Color="White"/>
                <Label Grid.Row="3"
                       Grid.Column="1"
                       Text="Voertuig"
                       HorizontalOptions="Center"
                       VerticalOptions="End" />
                <ImageButton Source="truck.svg"
                         Grid.Row="3"
                         Grid.Column="1"/>

            <BoxView Grid.Row="3"
                         Grid.Column="0"
                         Color="White" />
                <Label Grid.Row="3"
                       Grid.Column="0"
                       Text="Voorspellingen"
                       HorizontalOptions="Center"
                       VerticalOptions="End" />
            <ImageButton Source="clock.svg"
                         Grid.Row="3"
                         Grid.Column="0"
                         HeightRequest="120"/>




            <Border Grid.Row="0"
                        Grid.ColumnSpan="2"
                        HeightRequest="155"
                        WidthRequest="385"
                        BackgroundColor="Transparent" 
                        Stroke="Black"
                        StrokeThickness="2.5"
                        StrokeShape="RoundRectangle 40 10"/>

                <Border Grid.Row="1"
                        Grid.Column="0"
                        HeightRequest="164"
                        WidthRequest="193"
                        BackgroundColor="Transparent"    
                        Stroke="Black"
                        StrokeThickness="2.5"/>

                <Border Grid.Row="1"
                        Grid.Column="1"
                        HeightRequest="164"
                        WidthRequest="193"
                        BackgroundColor="Transparent"    
                        Stroke="Black"
                        StrokeThickness="2.5"/>

                <Border Grid.Row="2"
                        Grid.Column="0"
                        HeightRequest="164"
                        WidthRequest="193"
                        BackgroundColor="Transparent"    
                        Stroke="Black"
                        StrokeThickness="2.5"/>

                <Border Grid.Row="2"
                        Grid.Column="1"
                        HeightRequest="164"
                        WidthRequest="193"
                        BackgroundColor="Transparent"    
                        Stroke="Black"
                        StrokeThickness="2.5"/>

                <Border Grid.Row="3"
                        Grid.Column="0"
                        HeightRequest="164"
                        WidthRequest="193"
                        BackgroundColor="Transparent"    
                        Stroke="Black"
                        StrokeThickness="2.5"/>

                <Border Grid.Row="3"
                        Grid.Column="1"
                        HeightRequest="164"
                        WidthRequest="193"
                        BackgroundColor="Transparent"    
                        Stroke="Black"
                        StrokeThickness="2.5"/>
                  
            <StackLayout IsVisible="{Binding IsLoggedIn}" 
                         Grid.Row="5"
                         
                         Grid.ColumnSpan="2"
                         HeightRequest="155">
                <Button Text="Logout" Clicked="LogoutButton_Clicked" />
            </StackLayout>

            </Grid>

        
        </StackLayout>

    
</ContentPage>