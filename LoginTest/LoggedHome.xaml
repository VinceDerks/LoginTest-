<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LoginTest"
             x:Class="LoginTest.LoggedHome">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the Homepage" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

            <!-- Burger menu -->
            <StackLayout IsVisible="{Binding IsLoggedIn}">
                <Button Text="Logout" Clicked="LogoutButton_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>