<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lang="clr-namespace:LoginTest.Resources.Languages"
             x:Class="LoginTest.RouteDetails">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="10" />
            </Style>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="Margin" Value="10" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <Border Stroke="black"
                StrokeThickness="3">
            <StackLayout>
                <Label Text="{x:Static lang:AppResources.ID}"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
                <Label Text="{Binding SelectedRoute.ID}" 
                        HorizontalOptions="Center"
                       VerticalOptions="Center"              
                       Style="{StaticResource LabelStyle}" />
            </StackLayout>
        </Border>

        <Border Stroke="black"
                StrokeThickness="3">
            <StackLayout>
            <Label Text="{x:Static lang:AppResources.Place}" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"               />
            <Label Text="{Binding SelectedRoute.City}" 
                    HorizontalOptions="Center"
                   VerticalOptions="Center"              
                   Style="{StaticResource LabelStyle}" />
            </StackLayout>
        </Border>

        <Border Stroke="black"
                StrokeThickness="3">
            <StackLayout>
            <Label Text="{x:Static lang:AppResources.Adress}"  
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            <Label Text="{Binding SelectedRoute.Adress}" 
                   HorizontalOptions="Center"
                   VerticalOptions="Center"               
                   Style="{StaticResource LabelStyle}" />
            </StackLayout>
        </Border>


        <Border Stroke="black"
                StrokeThickness="3">
            <StackLayout>
            <Label Text="{x:Static lang:AppResources.Arrival}" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"               />
            <Label Text="{Binding SelectedRoute.TimeArrive}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"               
                   Style="{StaticResource LabelStyle}" />
            </StackLayout>
        </Border>

        <Border Stroke="black"
                StrokeThickness="3">
            <StackLayout>
            <Label Text="{x:Static lang:AppResources.Departure}" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"               />
            <Label Text="{Binding SelectedRoute.TimeDepart}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"               
                   Style="{StaticResource LabelStyle}" />
            </StackLayout>
        </Border>

        <Border Stroke="black"
                StrokeThickness="3">
            <StackLayout>
            <Label Text="{x:Static lang:AppResources.Type}" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            <Label Text="{Binding SelectedRoute.TypeOf}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Style="{StaticResource LabelStyle}" />
            </StackLayout>
        </Border>

        <Button Clicked="Arrived" Text="{x:Static lang:AppResources.Arrived}" 
                    BackgroundColor="Green" 
                    Style="{StaticResource ButtonStyle}" />
        </StackLayout>
</ContentPage>