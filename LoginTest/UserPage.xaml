<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginTest.UserPage"
             BackgroundColor="White"
                          NavigationPage.HasNavigationBar="True"
Shell.NavBarIsVisible="True"
Shell.TabBarIsVisible="True"
            >

    <StackLayout Margin="20">
        <Label Text="Username: " FontAttributes="Bold" />
        <Label x:Name="UsernameLabel" />
        <Label Text="Password: " FontAttributes="Bold" />
        <Label x:Name="PasswordLabel"
           />
        <StackLayout IsVisible="{Binding IsLoggedIn}" 
                         Grid.Row="5"
                         
                         Grid.ColumnSpan="2"
                         HeightRequest="155">
            <Button Text="Logout" Clicked="LogoutButton_Clicked" />
            <Button Text="Routes" Clicked="NavToRoutes" />
        </StackLayout>
    </StackLayout>
</ContentPage>