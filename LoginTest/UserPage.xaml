<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginTest.UserPage"
             xmlns:lang="clr-namespace:LoginTest.Resources.Languages"
             BackgroundColor="White"
                          NavigationPage.HasNavigationBar="True"
Shell.NavBarIsVisible="True"
Shell.TabBarIsVisible="True"
            >

    <StackLayout Margin="20">
        <Label Text="{x:Static lang:AppResources.User}" 
               FontAttributes="Bold" />
        <Label x:Name="UsernameLabel" />
        <Label Text="{x:Static lang:AppResources.Pass}"
               FontAttributes="Bold" />
        <Label x:Name="PasswordLabel"
           />
        <StackLayout IsVisible="{Binding IsLoggedIn}" 
                         Grid.Row="5"
                         
                         Grid.ColumnSpan="2"
                         HeightRequest="155">
            <Button Text="{x:Static lang:AppResources.Logoutbutton}" 
                    Clicked="LogoutButton_Clicked" />
            <Button Text="Routes" 
                    Clicked="NavToRoutes" />
        </StackLayout>
    </StackLayout>
</ContentPage>